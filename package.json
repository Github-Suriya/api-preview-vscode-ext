{
  "name": "wad-api-preview",
  "displayName": "API Preview",
  "description": "Preview API responses directly inside VS Code",
  "version": "0.2.0",
  "publisher": "Github-Suriya",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onCommand:apiPreview.open",
    "onView:apiPreviewSidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "api-preview-container",
          "title": "API Preview",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "api-preview-container": [
        {
          "id": "apiPreviewSidebar",
          "name": "Saved Requests"
        }
      ]
    },
    "commands": [
      {
        "command": "apiPreview.open",
        "title": "New Request",
        "icon": "$(add)"
      },
      {
        "command": "apiPreview.deleteRequest",
        "title": "Delete",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "apiPreview.open",
          "group": "navigation",
          "when": "view == apiPreviewSidebar"
        }
      ],
      "view/item/context": [
        {
          "command": "apiPreview.deleteRequest",
          "when": "view == apiPreviewSidebar",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "API Preview",
      "properties": {
        "apiPreview.variables": {
          "type": "object",
          "default": {
            "baseUrl": "http://localhost:3000",
            "token": "my-secret-token"
          },
          "description": "Global variables to use in requests. Access them using {{variableName}}."
        }
      }
    }
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.19.8",
    "typescript": "^5.3.2"
  }
}