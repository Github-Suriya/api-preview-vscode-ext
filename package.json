{
  "name": "wad-api-preview",
  "displayName": "API Preview",
  "description": "Preview API responses directly inside VS Code",
  "version": "0.0.1",
  "publisher": "Github-Suriya",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Github-Suriya/api-preview-vscode-ext"
  },
  "icon": "media/icon.png",
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:apiPreview.open"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apiPreview.open",
        "title": "API Preview: Open"
      }
    ]
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.19.8",
    "typescript": "^5.3.2"
  }
}
